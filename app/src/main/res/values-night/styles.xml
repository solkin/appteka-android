<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Night Theme Overrides for AppTheme -->
    <style name="AppTheme" parent="Theme.Material3Expressive.DynamicColors.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o">false</item>

        <!-- Material 3 Color Scheme - сохраняем оригинальные зелёно-оранжевые цвета -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorPrimaryContainer">@color/primary_container_dark</item>
        <item name="colorOnPrimaryContainer">@color/primary_color</item>

        <item name="colorSecondary">@color/accent_color</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="colorSecondaryContainer">@color/secondary_container_dark</item>
        <item name="colorOnSecondaryContainer">@color/accent_color</item>

        <item name="colorTertiary">@color/accent_color</item>
        <item name="colorOnTertiary">@android:color/white</item>
        <item name="colorTertiaryContainer">@color/accent_color</item>
        <item name="colorOnTertiaryContainer">@android:color/white</item>

        <item name="colorError">#d63205</item>
        <item name="colorOnError">@android:color/white</item>
        <item name="colorErrorContainer">#93000a</item>
        <item name="colorOnErrorContainer">#ffdad6</item>

        <item name="colorSurface">@color/surface_color_dark</item>
        <item name="colorOnSurface">@color/text_primary_color_dark</item>
        <item name="colorSurfaceVariant">#49454F</item>
        <item name="colorOnSurfaceVariant">#CAC4D0</item>
        <item name="colorSurfaceContainer">@color/surface_container_dark</item>
        <item name="colorSurfaceContainerLow">#1E1E1E</item>

        <item name="colorOutline">#938F99</item>
        <item name="colorOutlineVariant">#49454F</item>

        <item name="android:windowBackground">@color/surface_color_dark</item>

        <item name="text_primary_color">@color/text_primary_color_dark</item>
        <item name="text_secondary_color">#B1B1B1</item>
        <item name="donate_card_background">#151515</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="bottom_bar_background">@color/bottom_nav_background_dark</item>

        <item name="toolbar_background">@color/surface_color_dark</item>
        <item name="search_toolbar_background">@color/surface_color_dark</item>

        <item name="divider_color">@color/divider_dark</item>

        <item name="compose_background">@drawable/compose_background_dark</item>
        <item name="compose_gradient">@drawable/compose_gradient_dark</item>
        <item name="discuss_bubble_color">@color/discuss_bubble_color_dark</item>
        <item name="service_background">@drawable/service_background_dark</item>

        <item name="rating_empty">#ff343434</item>
        <item name="rating_fill">#ffa1a1a1</item>

        <item name="five_stars">#ff366c4a</item>
        <item name="four_stars">#ff537d30</item>
        <item name="three_stars">#ffad9700</item>
        <item name="two_stars">#ff9d650e</item>
        <item name="one_stars">#ff902c10</item>

        <item name="menu_icons_tint">@color/icons_grey_dark</item>
        <item name="semitransparent_color">@color/color_semitransparent_black</item>

        <item name="permissions_container_background">@color/permissions_container_dark_background</item>

        <item name="block_grey_color">@color/block_grey_color_dark</item>

        <item name="feed_outline_color">@color/feed_outline_color_dark</item>
        <item name="feed_background_color">@color/feed_background_color_dark</item>

        <item name="reaction_background_color">#2A2A2B</item>
        <item name="reaction_border_color">#3A3A3B</item>
        <item name="reaction_background_active_color">#1A3A1A</item>
        <item name="reaction_border_active_color">@color/primary_color</item>
        <item name="reaction_text_color">?attr/text_secondary_color</item>

        <item name="category_dropdown_background">?attr/colorSurfaceContainerLow</item>

        <!-- Preference Theme -->
        <item name="preferenceTheme">@style/AppPreferenceThemeOverlay</item>
        <item name="materialCardViewStyle">@style/Widget.Material3.CardView.Elevated</item>
    </style>

</resources>

