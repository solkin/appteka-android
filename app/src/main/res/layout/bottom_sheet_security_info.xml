<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <LinearLayout
        android:id="@+id/security_status_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/security_status_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            tools:src="@drawable/ic_verified"
            tools:tint="@color/block_success_color" />

        <TextView
            android:id="@+id/security_status_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:textColor="?text_primary_color"
            android:textSize="16sp"
            tools:text="Verified Safe â€” No threats detected" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/security_score_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/security_score_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_chart"
            app:tint="?text_secondary_color" />

        <TextView
            android:id="@+id/security_score_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:textColor="?text_secondary_color"
            android:textSize="14sp"
            tools:text="Risk Score: 25%" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/security_tools_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/security_tools_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_security"
            app:tint="?text_secondary_color" />

        <TextView
            android:id="@+id/security_tools_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:textColor="?text_secondary_color"
            android:textSize="14sp"
            tools:text="Scanned with: ClamAV, APKiD, Quark-Engine" />

    </LinearLayout>

</LinearLayout>

