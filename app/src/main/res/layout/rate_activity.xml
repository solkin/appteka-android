<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar Section -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:navigationIconTint="?attr/colorOnSurface">

            <include layout="@layout/icon_toolbar" />

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="24dp"
            android:paddingHorizontal="24dp">

            <!-- 1. User Info Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <include
                    android:id="@+id/member_icon"
                    layout="@layout/user_icon_m"
                    android:layout_width="48dp"
                    android:layout_height="48dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="0dp">

                    <TextView
                        android:id="@+id/member_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:includeFontPadding="false"
                        tools:text="Crown" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:includeFontPadding="false"
                        android:layout_marginTop="4dp"
                        android:text="@string/reviews_policy" />

                </LinearLayout>

            </LinearLayout>

            <!-- 2. Rating Bar (Material Styling) -->
            <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:id="@+id/rating_view"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="24dp"
            android:numStars="5"
            android:rating="0"
            android:stepSize="1"
            android:isIndicator="false"
            android:progressTint="#FFFFC107"
            android:progressBackgroundTint="#FFBDBDBD"
            android:secondaryProgressTint="#FFBDBDBD"
            style="@style/Widget.MaterialRatingBar.RatingBar" />

            <!-- 3. Review Input (Material 3 Outlined Text Field) -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:hint="@string/enter_your_review">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/review_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLines="4"
                    android:minLines="2"
                    android:gravity="top|start"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="17sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- 4. Submit Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/submit_button"
                style="@style/MaterialButtonPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/publish_review" />

        </LinearLayout>

    </ScrollView>

    <include
        layout="@layout/progress_overlay"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>