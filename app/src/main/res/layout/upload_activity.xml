<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
     android:layout_width="match_parent">

    <ViewFlipper
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         android:layout_marginTop="?actionBarSize"
         android:layout_alignParentBottom="true"
         android:layout_alignTop="@id/toolbar_container"
         android:id="@+id/flipper">

        <androidx.recyclerview.widget.RecyclerView
             android:layout_height="match_parent"
             android:layout_width="match_parent"
             android:id="@+id/recycler" />

        <include
             layout="@layout/upload_progress" />

    </ViewFlipper>

    <LinearLayout
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         android:visibility="gone"
         android:background="?android:windowBackground"
         android:gravity="center"
         android:clickable="true"
         android:orientation="vertical"
         android:layout_marginTop="?actionBarSize"
         android:focusable="true"
         android:id="@+id/error">

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:gravity="center"
             android:textAppearance="?attr/textAppearanceTitleMedium"
             android:includeFontPadding="false"
             android:textColor="?attr/colorOnSurface"
             android:id="@+id/error_title"
             android:text="@string/details_error_title" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:gravity="center"
             android:textAppearance="?attr/textAppearanceBodyMedium"
             android:includeFontPadding="false"
             android:textColor="?attr/colorOnSurfaceVariant"
             android:layout_marginTop="4dp"
             android:id="@+id/error_subtitle"
             android:text="@string/details_error_subtitle" />

        <com.google.android.material.button.MaterialButton
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             style="@style/MaterialButtonPrimary"
             android:layout_marginTop="16dp"
             android:layout_marginLeft="16dp"
             android:layout_marginRight="16dp"
             android:id="@+id/retry_button"
             android:layout_gravity="center"
             android:text="@string/retry" />

    </LinearLayout>

    <include
         layout="@layout/progress_overlay"
         android:visibility="gone" />

    <com.google.android.material.appbar.AppBarLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:id="@+id/toolbar_container">

        <com.google.android.material.appbar.MaterialToolbar
             android:layout_height="?attr/actionBarSize"
             android:layout_width="match_parent"
             app:navigationIconTint="?attr/colorOnSurface"
             app:titleTextAppearance="?attr/textAppearanceTitleMedium"
             app:navigationIcon="?attr/homeAsUpIndicator"
             app:titleTextColor="?attr/colorOnSurface"
             android:id="@+id/toolbar">

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

</RelativeLayout>