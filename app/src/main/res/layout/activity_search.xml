<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/search_fragment"
        android:name="com.tomclaw.appsend.main.store.search.SearchFragment_"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize" />

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@drawable/shadow" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/search_toolbar_background"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/query_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/search_app"
            android:imeOptions="flagNoFullscreen|actionSearch"
            android:lines="1"
            android:singleLine="true" />

    </androidx.appcompat.widget.Toolbar>

</FrameLayout>