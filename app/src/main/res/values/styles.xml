<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="accent_color">#4d9116</color>
    <color name="primary_color">#32a304</color>
    <color name="primary_dark_color">#2a8a03</color>

    <color name="chocolate_color">#894121</color>
    <color name="chocolate_dark_color">#632309</color>

    <color name="badge_color">#f79406</color>

    <color name="grey">#dadada</color>
    <color name="grey_dark">#747474</color>
    <color name="black">#000</color>
    <color name="dark_back_color">#FF101010</color>
    <color name="cardview_dark_background">#FF202020</color>
    <color name="cardview_light_background">#FFFFFFFF</color>

    <color name="permissions_container_light_background">#def1e8</color>
    <color name="permissions_container_dark_background">#0C1D15</color>

    <color name="play_view_light_color">#EF6C00</color>
    <color name="play_view_dark_color">#a34900</color>

    <color name="divider_light">#dadada</color>
    <color name="divider_dark">#424242</color>

    <color name="abuse_color">#d63205</color>

    <color name="dangerous_permission_color">#c40e72</color>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/accent_color</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>

        <item name="text_primary_color">#00000E</item>
        <item name="text_secondary_color">#4e4e4e</item>
        <item name="donate_card_background">#f0f0f0</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="cardViewStyle">@style/CardViewStyle.Light</item>

        <item name="bottom_bar_background">#ffffff</item>

        <item name="toolbar_background">@color/primary_color</item>

        <item name="play_view_color">@color/play_view_light_color</item>

        <item name="divider_color">@color/divider_light</item>

        <item name="permissions_container_background">
            @color/permissions_container_light_background
        </item>
    </style>

    <style name="AppThemeBlack" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/accent_color</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>

        <item name="android:windowBackground">@color/dark_back_color</item>

        <item name="text_primary_color">#FFFFF1</item>
        <item name="text_secondary_color">#B1B1B1</item>
        <item name="donate_card_background">#151515</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="cardViewStyle">@style/CardViewStyle.Dark</item>

        <item name="bottom_bar_background">#181818</item>

        <item name="toolbar_background">#263238</item>

        <item name="play_view_color">@color/play_view_dark_color</item>

        <item name="divider_color">@color/divider_dark</item>

        <item name="permissions_container_background">@color/permissions_container_dark_background
        </item>
    </style>

    <style name="CardViewStyle.Light" parent="CardView">
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
    </style>

    <style name="CardViewStyle.Dark" parent="CardView">
        <item name="cardBackgroundColor">@color/cardview_dark_background</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

</resources>