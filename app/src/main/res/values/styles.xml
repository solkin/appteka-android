        <item name="android:navigationBarColor">@color/bottom_nav_background_light</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <item name="android:windowBackground">@color/light_back_color</item>

        <item name="text_primary_color">@color/text_primary_color_light</item>
